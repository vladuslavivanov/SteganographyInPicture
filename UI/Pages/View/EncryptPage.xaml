<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SteganographyInPicture.UI.Pages.View.EncryptPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SteganographyInPicture.UI.Pages.View"
    xmlns:enums="using:SteganographyInPicture.Enums"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:converters="using:SteganographyInPicture.Converters"
    xmlns:controlsView ="using:SteganographyInPicture.UI.CustomControls.View"
    xmlns:controlsViewModel ="using:SteganographyInPicture.UI.CustomControls.ViewModel"
    xmlns:toolkitConverters="using:CommunityToolkit.WinUI.Converters"
    xmlns:primitives="using:CommunityToolkit.WinUI.Controls"
    xmlns:system="using:System"
    xmlns:scrollViewerCursorHelper="using:SteganographyInPicture.UI.Helpers"

    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:ImageSteganographyMethodEnumConverter x:Key="ImageSteganographyMethodEnumConverter" />
        <converters:DoubleToIntConverter x:Key="DoubleToIntConverter"/>
        <toolkitConverters:StringVisibilityConverter x:Key="StringVisibilityConverter"/>
        <toolkitConverters:EmptyStringToObjectConverter x:Key="EmptyStringToObjectConverter"
                                                 EmptyValue="False"
                                                 NotEmptyValue="True" />
        <toolkitConverters:EmptyObjectToObjectConverter x:Key="EmptyObjectToObjectConverter" 
                                                        EmptyValue="False" 
                                                        NotEmptyValue="True"/>

    </Page.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" Spacing="10" Margin="10" HorizontalAlignment="Stretch">
                <controls:SettingsCard ContentAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Spacing="10" HorizontalAlignment="Left">
                            <Button Style="{StaticResource AccentButtonStyle}" Command="{x:Bind ViewModel.OpenFileCommand}">
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <SymbolIcon Symbol="Import"/>
                                    <TextBlock Text="Открыть картинку для шифрования"/>
                                </StackPanel>
                            </Button>

                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <TextBlock Text="Путь к картинке: " VerticalAlignment="Center"/>
                                <TextBlock Text="{x:Bind ViewModel.PathToImage, Mode=TwoWay}" VerticalAlignment="Center" ToolTipService.ToolTip="{x:Bind ViewModel.PathToImage, Mode=TwoWay}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                </controls:SettingsCard>

                <controls:SettingsExpander Header="Настройки стеганографии" HeaderIcon="Setting" 
                                           Visibility="{x:Bind ViewModel.PathToImage, Mode=OneWay, Converter={StaticResource StringVisibilityConverter}}">
                    <controls:SettingsExpander.Items>

                        <controls:SettingsCard ContentAlignment="Left">
                            <StackPanel Spacing="10">
                                
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <TextBlock Text="Глубина внедрения в каналы"/>
                                    <FontIcon Glyph="&#xE946;" ToolTipService.ToolTip="Глубина внедрения указывает количество бит, используемых для скрытия данных в канале пикселя изображения."/>
                                </StackPanel>   
                                       
                                <ItemsControl ItemsSource="{x:Bind ViewModel.AvailablePixelChannels}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="controlsViewModel:PixelChannelControlViewModel">
                                            <controlsView:PixelChannelControl ViewModel="{x:Bind}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <primitives:WrapPanel HorizontalSpacing="50" VerticalSpacing="25"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                                                            
                            </StackPanel>
                            
                        </controls:SettingsCard>

                        <controls:SettingsCard HorizontalContentAlignment="Stretch" ContentAlignment="Vertical">
                            <StackPanel HorizontalAlignment="Stretch">

                                <TextBlock Text="Тип распределения текста по файлу"/>

                                <RadioButtons>
                                    <RadioButton IsChecked="{x:Bind ViewModel.SelectedMethod, Mode=TwoWay, Converter={StaticResource ImageSteganographyMethodEnumConverter}, ConverterParameter=Linear}">
                                        <RadioButton.Content>
                                            <StackPanel Orientation="Horizontal" Spacing="10">
                                                <TextBlock Text="Линейное распределение"/>
                                                <FontIcon Glyph="&#xE946;" ToolTipService.ToolTip="Данные скрываются последовательно вдоль изображения, начиная с первой доступной позиции."/>
                                            </StackPanel>
                                        </RadioButton.Content>
                                    </RadioButton>

                                    <RadioButton IsChecked="{x:Bind ViewModel.SelectedMethod, Mode=TwoWay, Converter={StaticResource ImageSteganographyMethodEnumConverter}, ConverterParameter=Uniform}">
                                        <RadioButton.Content>
                                            <StackPanel Orientation="Horizontal" Spacing="10">
                                                <TextBlock Text="Равномерное распределение"/>
                                                <FontIcon Glyph="&#xE946;" ToolTipService.ToolTip="Данные скрываются равномерно по всему изображению."/>
                                            </StackPanel>
                                        </RadioButton.Content>
                                    </RadioButton>

                                    <RadioButton IsChecked="{x:Bind ViewModel.SelectedMethod, Mode=TwoWay, Converter={StaticResource ImageSteganographyMethodEnumConverter}, ConverterParameter=Pseudorandom}">
                                        <RadioButton.Content>
                                            <StackPanel Orientation="Horizontal" Spacing="10">
                                                <TextBlock Text="Псевдослучайное распределение"/>
                                                <FontIcon Glyph="&#xE946;" ToolTipService.ToolTip="Данные скрываются в псевдослучайных местах изображения, используя секретный элемент."/>
                                            </StackPanel>
                                        </RadioButton.Content>
                                    </RadioButton>
                                </RadioButtons>

                                <StackPanel Spacing="10" Orientation="Vertical" Visibility="{x:Bind ViewModel.SecretKeyVisible, Mode=TwoWay}" >
                                    <StackPanel Spacing="10" Orientation="Horizontal">
                                        <TextBlock Text="Секретный элемент" VerticalAlignment="Center"/>
                                        <TextBox PlaceholderText="Введите текст" Width="200" Text="{x:Bind ViewModel.SecretKey, Mode=TwoWay}"/>
                                        <FontIcon Glyph="&#xE946;" ToolTipService.ToolTip="Строка необходима для генерации хэша, который будет использоваться для сокрытия данных в изображении."/>
                                    </StackPanel>

                                    <StackPanel Spacing="10" Orientation="Horizontal">
                                        <Button Content="Сгенерировать GUID" Command="{x:Bind ViewModel.GenerateGuidCommand}"/>
                                        <FontIcon Glyph="&#xE946;" ToolTipService.ToolTip="GUID (Globally Unique Identifier) - уникальный идентификатор."/>
                                    </StackPanel>

                                </StackPanel>

                                <StackPanel Spacing="10" Orientation="Horizontal" Visibility="{x:Bind ViewModel.QuantityPixelsInGroupsVisible, Mode=TwoWay}" >
                                    <TextBlock Text="Количество пикселей в группе" VerticalAlignment="Center"/>
                                    <NumberBox PlaceholderText="Введите число" Width="200" Minimum="1" SpinButtonPlacementMode="Inline" ValidationMode="InvalidInputOverwritten" 
                                                Value="{x:Bind ViewModel.QuantityPixelsInGroups, Mode=TwoWay, Converter={StaticResource DoubleToIntConverter}}"/>
                                    <FontIcon Glyph="&#xE946;" ToolTipService.ToolTip="Указывает то, сколько в одной группе будет подряд идущих пикселей с шифрованной информацией."/>
                                </StackPanel>
                                
                            </StackPanel>
                        </controls:SettingsCard>

                        <controls:SettingsCard HorizontalContentAlignment="Stretch" ContentAlignment="Vertical">

                            <StackPanel Spacing="20" Orientation="Horizontal">
                                <StackPanel Spacing="10">
                                    <TextBlock Text="Кодировка"/>
                                    <ComboBox ItemsSource="{x:Bind ViewModel.AvailableEncodings, Mode=TwoWay}" 
                                              SelectedItem="{x:Bind ViewModel.SelectedEncoding, Mode=TwoWay}"/>
                                </StackPanel>
                                <StackPanel Spacing="10">
                                    <TextBlock Text="Сжатие"/>
                                    <ComboBox ItemsSource="{x:Bind ViewModel.AvailableCompressions, Mode=TwoWay}" 
                                              SelectedItem="{x:Bind ViewModel.SelectedCompression, Mode=TwoWay}"/>
                                </StackPanel>
                            </StackPanel>
                        </controls:SettingsCard>


                        <controls:SettingsCard HorizontalContentAlignment="Stretch" ContentAlignment="Vertical" >

                            <StackPanel HorizontalAlignment="Stretch" Spacing="10">
                            
                                <TextBlock Text="Текст для шифрования"/>
                                <TextBox HorizontalAlignment="Stretch"
                                         PlaceholderText="Введите текст для сокрытия..." 
                                         TextWrapping="Wrap" MaxHeight="200"
                                         Text="{x:Bind ViewModel.TextToHide, Mode=TwoWay}"/>

                            </StackPanel>
                        
                        </controls:SettingsCard>
                    
                    </controls:SettingsExpander.Items>
                </controls:SettingsExpander>
                
                <controls:SettingsCard ContentAlignment="Left" 
                                       Visibility="{x:Bind ViewModel.PathToImage, Mode=OneWay, Converter={StaticResource StringVisibilityConverter}}"
                                       IsEnabled="{x:Bind ViewModel.TextToHide, Mode=OneWay, Converter={StaticResource EmptyStringToObjectConverter}}">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Button Style="{StaticResource AccentButtonStyle}" Command="{x:Bind ViewModel.EncryptImageCommand}">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <FontIcon Glyph="&#xEDE1;"/>
                                <TextBlock Text="Зашифровать текст"/>
                            </StackPanel>
                        </Button>

                        <Button IsEnabled="{x:Bind ViewModel.ResultImageToSave, Mode=OneWay, Converter={StaticResource EmptyObjectToObjectConverter}}"
                                Command="{x:Bind ViewModel.SaveImageCommand}">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <FontIcon Glyph="&#xE896;"/>
                                <TextBlock Text="Сохранить"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </controls:SettingsCard>

                <controls:SettingsExpander Header="Выходные параметры" HeaderIcon="Send"
                                           Visibility="{x:Bind ViewModel.QuantityPixelsInGroupsVisible, Mode=TwoWay}">

                    <controls:SettingsExpander.Items>
                        <controls:SettingsCard HorizontalContentAlignment="Left" ContentAlignment="Vertical">
                            <StackPanel Spacing="10" Orientation="Horizontal" >
                                <TextBlock Text="Частота групп" VerticalAlignment="Center" />
                                <TextBox PlaceholderText="Расстояние между группами..." Width="200" IsReadOnly="True"
                                         Text="{x:Bind ViewModel.FrequencyOfGroups.ToString(), Mode=OneWay}"/>
                                <FontIcon Glyph="&#xE946;" ToolTipService.ToolTip="Указывает то, как часто встречается шифрованная информация в изображении."/>
                            </StackPanel>
                        </controls:SettingsCard>
                    </controls:SettingsExpander.Items>
                </controls:SettingsExpander>

                <controls:SettingsExpander Header="Сравнение" HeaderIcon="Switch"
                                           Visibility="{x:Bind ViewModel.PathToImage, Mode=OneWay, Converter={StaticResource StringVisibilityConverter}}">
                    <controls:SettingsExpander.Items>
                        <controls:SettingsCard ContentAlignment="Left">
                            <Grid ColumnSpacing="20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Orientation="Vertical" CanBeScrollAnchor="False" Spacing="5">
                                    <TextBlock Text="Исходное изображение"/>
                                    <ScrollViewer ZoomMode="Enabled" MaxHeight="500" MaxZoomFactor="70"
                                                  HorizontalScrollMode="Auto" HorizontalScrollBarVisibility="Auto"
                                                  VerticalScrollMode="Auto" VerticalScrollBarVisibility="Auto"
                                                  ManipulationMode="All" 
                                                  PointerPressed="{x:Bind scrollViewerCursorHelper:ScrollViewerCursorHelper.ScrollViewer_PointerPressed}"
                                                  PointerMoved="{x:Bind scrollViewerCursorHelper:ScrollViewerCursorHelper.ScrollViewer_PointerMoved}"
                                                  PointerReleased="{x:Bind scrollViewerCursorHelper:ScrollViewerCursorHelper.ScrollViewer_PointerReleased}">
                                        <Image Source="{x:Bind ViewModel.SourceImage, Mode=OneWay}"/>
                                    </ScrollViewer>
                                </StackPanel>

                                <StackPanel Orientation="Vertical" Grid.Column="1" Spacing="5">
                                    <TextBlock Text="Изображение с текстом"/>
                                    <ScrollViewer ZoomMode="Enabled" MaxHeight="500" MaxZoomFactor="70"
                                                  HorizontalScrollMode="Auto" HorizontalScrollBarVisibility="Auto"
                                                  VerticalScrollMode="Auto" VerticalScrollBarVisibility="Auto"
                                                  ManipulationMode="All"
                                                  PointerPressed="{x:Bind scrollViewerCursorHelper:ScrollViewerCursorHelper.ScrollViewer_PointerPressed}"
                                                  PointerMoved="{x:Bind scrollViewerCursorHelper:ScrollViewerCursorHelper.ScrollViewer_PointerMoved}"
                                                  PointerReleased="{x:Bind scrollViewerCursorHelper:ScrollViewerCursorHelper.ScrollViewer_PointerReleased}">
                                        <Image Source="{x:Bind ViewModel.ResultImage, Mode=OneWay}"/>
                                    </ScrollViewer>
                                </StackPanel>

                            </Grid>
                        </controls:SettingsCard>
                    </controls:SettingsExpander.Items>
                </controls:SettingsExpander>
                
            </StackPanel>
        </ScrollViewer>

        <ScrollViewer VerticalAlignment="Bottom" MaxHeight="200" VerticalScrollBarVisibility="Hidden">
            

            <ItemsControl ItemsSource="{x:Bind ViewModel.InfoBarMessages}" Margin="10">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <InfoBar/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" Spacing="10" VerticalAlignment="Bottom" MaxHeight="400"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
        
        
    </Grid>
</Page>
