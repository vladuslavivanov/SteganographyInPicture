<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SteganographyInPicture.UI.Pages.View.CalculatorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SteganographyInPicture.UI.Pages.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:controlsView ="using:SteganographyInPicture.UI.CustomControls.View"
    xmlns:controlsViewModel ="using:SteganographyInPicture.UI.CustomControls.ViewModel"
    xmlns:converters="using:SteganographyInPicture.Converters"
    xmlns:toolkitConverters="using:CommunityToolkit.WinUI.Converters"
    xmlns:primitives="using:CommunityToolkit.WinUI.Controls"
    
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:DoubleToIntConverter x:Key="DoubleToIntConverter"/>
        <toolkitConverters:StringVisibilityConverter x:Key="StringVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollMode="Disabled">

            
            <StackPanel Orientation="Vertical" Margin="10">

                <controls:SettingsCard ContentAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Spacing="10" HorizontalAlignment="Left">
                            <Button Style="{StaticResource AccentButtonStyle}" Command="{x:Bind ViewModel.OpenFileCommand}">
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <SymbolIcon Symbol="Import"/>
                                    <TextBlock Text="Открыть картинку для изменения"/>
                                </StackPanel>
                            </Button>

                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <TextBlock Text="Путь к картинке: " VerticalAlignment="Center"/>
                                <TextBlock Text="{x:Bind ViewModel.PathToImage, Mode=TwoWay}" VerticalAlignment="Center" ToolTipService.ToolTip="{x:Bind ViewModel.PathToImage, Mode=TwoWay}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                </controls:SettingsCard>

                <controls:SettingsCard Visibility="{x:Bind ViewModel.PathToImage, Mode=OneWay, Converter={StaticResource StringVisibilityConverter}}" 
                                       ContentAlignment="Left">
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Orientation="Horizontal" Spacing="10" Grid.Column="0" HorizontalAlignment="Stretch">
                            <TextBlock Text="Вывести пиксели с " VerticalAlignment="Center"/>
                            <NumberBox Minimum="0" Maximum="{x:Bind ViewModel.SelectedTo, Mode=TwoWay, Converter={StaticResource DoubleToIntConverter}}" 
                                       Value="{x:Bind ViewModel.SelectedFrom, Mode=TwoWay, Converter={StaticResource DoubleToIntConverter}}"/>
                            <TextBlock Text=" по  " VerticalAlignment="Center"/>
                            <NumberBox Minimum="{x:Bind ViewModel.SelectedFrom, Mode=TwoWay, Converter={StaticResource DoubleToIntConverter}}" 
                                       Maximum="{x:Bind ViewModel.QuantityPixels, Mode=OneWay}"
                                       Value="{x:Bind ViewModel.SelectedTo, Mode=TwoWay, Converter={StaticResource DoubleToIntConverter}}"/>
                            <Button Content="Готово" Command="{x:Bind ViewModel.SelectPixelsCommand}"/>
                        </StackPanel>

                        <Button Content="Сохранить" Command="{x:Bind ViewModel.SaveUsCommand}" HorizontalAlignment="Right" Grid.Column="2" Margin="10 0 0 0"/>

                    </Grid>
                </controls:SettingsCard>

                <controls:SettingsCard ContentAlignment="Left"  Visibility="{x:Bind ViewModel.PathToImage, Mode=OneWay, Converter={StaticResource StringVisibilityConverter}}">
                    <ItemsControl ItemsSource="{x:Bind ViewModel.SelectedPixels}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="controlsViewModel:RGBControlViewModel">
                                <controlsView:RGBControl ViewModel="{x:Bind}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <primitives:WrapPanel HorizontalSpacing="50" VerticalSpacing="25"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </controls:SettingsCard>
                    
            </StackPanel>

        </ScrollViewer>
    </Grid>
</Page>
